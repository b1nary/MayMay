<% meta	title: 'Something went totally wrong',
   		robots: 'noindex' 
%>

<div class="container text-center well">
  <div class="page-header">
  	<br/>
    <h1>Something went totally wrong :/ (500)</h1>
    <h3>The request got logged, some tech-squirrel will look at it soon</h3>
    <br/>
  </div>
</div>

<div class="container text-center">
	<div class="row">
		<div class="col-md-12">
		<h3>May some memes can help your path?</h3>
		<br/>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<script type="text/javascript">
			var $maymays = []
				<% GeneratedMeme.order("RAND()").limit(12).each do |meme| %>
					<% if File.exists? "#{Rails.root}/public/gen/medium___#{meme.filename}" %>
						<% alt = meme.top
							alt = meme.bottom if alt == "" or alt == " "
						%>
			$maymays.push({ alt: '<%= alt %>', filename: '<%= meme.filename %>', id32: '<%= ApplicationHelper.id32(meme.id) %>' })
					<% end %>
				<% end %>
			</script>
			<div id="memewall">
			</div>
		</div>
	</div>
</div>