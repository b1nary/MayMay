<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<%= metamagic site: "#{Rails.configuration.app_title}",
								title: [:title, :site],
								separator: " ", publisher: "http://b1nary.ch",
								og: {
									site_name: "MayMay",
									type: "website",
									image: "#{ApplicationHelper.url}/images/logo_block.png"
								},
								twitter: {
									card: "summary",
									site: "@maymay_in",
									creator: "@talkb1nary",
									title: "#{Rails.configuration.app_title}",
									description: 'Next generation meme generator',
									image: { src: "#{ApplicationHelper.url}/images/logo_block.png" }
								}
	%>
	<link rel="shortcut icon" href="/favicon.ico">
	<link rel="icon" sizes="192x192" href="/images/logo_192.png">
	<meta name="theme-color" content="#93c54b">

	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" type="text/css" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/sandstone/bootstrap.min.css" type="text/css" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" type="text/css" rel="stylesheet">
	<link href="//fonts.googleapis.com/css?family=Lobster%7CRoboto:300,500" rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag    'application', media: 'all' %>
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-59257755-2', 'auto');
		ga('send', 'pageview');

	</script>
	<%= csrf_meta_tags %>
</head>

<body>
	<%= render "layouts/navigation" %>
	<noscript><div class="alert alert-danger" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>I am sorry to tell you this, but <strong>this site does require Javascript!</strong></div></noscript>
	<div id="alert-container">
	<% if notice %><div class="alert alert-info" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button> <%= notice %></div><% end %>
	<% if alert %><div class="alert alert-danger" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button> <%= alert %></div><% end %>
	</div>

	<%= yield %>

	<%= render "layouts/footer" %>

	<script type="text/javascript">var global_domain = '<%= Rails.configuration.schema %><%= Rails.configuration.app_domain %>'; var current_user = '<% if user_signed_in? %><%= current_user.name %><% end %>';</script>
	<script type="text/javascript" src="//code.jquery.com/jquery-1.11.2.min.js"></script>
	<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.2.2/masonry.pkgd.min.js"></script>
	<script type="text/javascript" src="//imagesloaded.desandro.com/imagesloaded.pkgd.min.js"></script>
	<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery-infinitescroll/2.0b2.120519/jquery.infinitescroll.min.js"></script>

	<%= javascript_include_tag 'application' %>

	<div class="beta"><span>BETA</span></div>
</body>
</html>
