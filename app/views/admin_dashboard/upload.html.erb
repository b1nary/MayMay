<% meta title: 'Upload for Picdumps - Admin Dashboard' %>
<div class="container">
  <div class="page-header">
    <h1>Admin Dashboard <small>Picdump upload</small></h1>
  </div>

  <div class="row">
  	<div class="col-md-12">
  		<%= form_for @picdump_image, :url => admin_dashboard_upload_post_path, :html => { :multipart => true } do |form| %>
		  <div class="form-group">
		    <label for="title">Title</label>
		    <%= form.text_field :title, :class => "form-control", :placeholder => "Enter Title" %>
		    <%= form.hidden_field request_forgery_protection_token.to_s, :value => form_authenticity_token %>
		  </div>
		  <div class="form-group">
		    <label for="picdump_category_id">Category</label>
		    <%= form.collection_select :picdump_category_id, PicdumpCategory.all, :id, :title, {}, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <label for="img">File input</label>
   		  	<%= form.file_field :img, :class => "form-control" %>
		    <p class="help-block">Upload image here.</p>
		  </div>
		  <div class="form-group">
		    <label for="title">File URL (alternativ)</label>
		    <%= form.text_field :img_url, :class => "form-control", :placeholder => "http://example.com/image.jpg" %>
		  </div>

		  <button type="submit" class="btn btn-default pull-right">Submit</button>
		<% end %>

  	</div>
  </div>

</div>